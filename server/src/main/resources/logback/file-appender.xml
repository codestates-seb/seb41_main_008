<included>
    <timestamp key="DATE_FORMAT" datePattern="yyyy-MM-dd"/>
    <appender name="FILE_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>./logs/${DATE_FORMAT}/info/info.log</file>

        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>ACCEPT</onMismatch>
        </filter>

        <encoder>
            <pattern>
                %highlight([%-5level]) %red([%d{yyyy-MM-dd HH:mm:ss}]) %green([%thread]) %magenta([%logger{0}:%line]) - %message%n
            </pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>./logs/%d{yyyy-MM-dd}/info/info_%i.log</fileNamePattern>
            <maxFileSize>5MB</maxFileSize>
            <maxHistory>2</maxHistory>
            <totalSizeCap>30MB</totalSizeCap>
        </rollingPolicy>
    </appender>
</included>